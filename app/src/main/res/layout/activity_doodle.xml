<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <com.hippo.nimingban.widget.DoodleView-->
    <!--        android:id="@+id/doodle_view"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"/>-->

    <LinearLayout
        android:id="@+id/side"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/colorPrimary">

            <ImageView
                android:id="@+id/palette"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_palette_24px" />

            <ImageView
                android:id="@+id/thickness"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_line_weight_24px" />

            <ImageView
                android:id="@+id/draw_action"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/undo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/redo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp" />

            <ImageView
                android:id="@+id/clear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_delete_24px" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ok"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_check_circle_24px" />

        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_left" />

    </LinearLayout>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="right|top"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_menu_white_24px" />

</FrameLayout>
