<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/postsFragment">
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.laotoua.dawnislandk.screens.settings.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_sizeCustomizationFragment"
            app:destination="@id/sizeCustomizationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/sizeCustomizationFragment"
        android:name="com.laotoua.dawnislandk.screens.settings.SizesCustomizationFragment"
        android:label="SizeCustomizationFragment" />
    <fragment
        android:id="@+id/browsingHistoryFragment"
        android:name="com.laotoua.dawnislandk.screens.history.BrowsingHistoryFragment"
        android:label="fragment_browsing_history"
        tools:layout="@layout/fragment_browsing_history" />
    <fragment
        android:id="@+id/postsFragment"
        android:name="com.laotoua.dawnislandk.screens.posts.PostsFragment"
        android:label="fragment_post"
        tools:layout="@layout/fragment_post" />

    <fragment
        android:id="@+id/feedPagerFragment"
        android:name="com.laotoua.dawnislandk.screens.feeds.FeedPagerFragment"
        android:label="FeedPagerFragment" />
</navigation>